{
  "compilerOptions": {
    "target": "ESNext", // Verificar se é possível atualizar para uma versão mais recente, como ES2021 ou ES2022
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@hyteck/shared": ["../shared/"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}