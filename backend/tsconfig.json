{
  "compilerOptions": {
    "target": "ESNext", // Verificar se é possível atualizar para uma versão mais recente, como ES2021 ou ES2022
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@hyteck/shared": ["../shared/"]
    },
    "noImplicitAny": true, // Adicionar diretiva para evitar uso de 'any' implícito
    "strictNullChecks": true, // Adicionar diretiva para checagem estrita de valores nulos
    "noUnusedLocals": true // Adicionar diretiva para evitar variáveis locais não utilizadas
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}