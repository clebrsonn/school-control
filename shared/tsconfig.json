{
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@hyteck/shared/*": ["./schemas/*"]
    },
    "outDir": "./dist",
    "rootDir": "./schemas",
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "strictPropertyInitialization": false,
    "sourceMap": true
  },
  "include": ["schemas/**/*.ts"],
  "exclude": ["node_modules"]
}